# LLM Configuration (llama-server or compatible OpenAI API)
LLAMA_MODEL=GLM-4.5-Air
LLAMA_TEMPERATURE=0.3
LLAMA_API_KEY=
LLAMA_BASE_URL=http://localhost:8080/v1/chat/completions
LLAMA_TOP_P=0.95
LLAMA_MAX_TOKENS=4096
